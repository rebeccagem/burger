<h1 class="text-center">Burger App!</h1>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Eat these burgers!</h2>
        </div>
        <div class="card-body">
          <ul class="list-group">
            {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Burgers you have eaten!</h2>
        </div>
        <div class="card-body">
          <ul class="list-group">
            {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header">
          <h2>Add a Burger</h2>
        </div>
        <div class="card-body">
          <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
              <label for="devoured">Hungry?</label>
              <br>
              <input type="radio" name="devoured" value="1" checked> Uneaten
              <br>
              <input type="radio" name="devoured" value="0"> Eaten
            </div>

            <button type="submit">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>